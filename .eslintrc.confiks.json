{
  "ignorePatterns": ["**/*"],
  "plugins": ["unused-imports", "simple-import-sort", "prettier", "unicorn"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "unused-imports/no-unused-imports": "warn"
      }
    },
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx", "*.html"],
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "endOfLine": "auto"
          }
        ]
      }
    }
  ]
}
